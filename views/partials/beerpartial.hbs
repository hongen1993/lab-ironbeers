<div class="col-md-4">
    <div class="card">
        <img class="card-img-top" src='{{image_url}}' alt='{{name}}' />
        <div class="card-body">
            <h3 class="card-title"><a href="/{{name}}-{{id}}">{{name}}</a></h3>
            <h5 class="card-subtitle">{{tagline}}</h5>
            <p class="card-text">{{description}}</p>
        </div>
    </div>
</div>